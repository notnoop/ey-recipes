check process <%= @worker_name %>
  with pidfile /var/run/engineyard/dj/<%= @app_name %>/dj_.pid
  start program = "/engineyard/bin/dj <%= @app_name %> start <%= @framework_env %>"
  stop program = "/engineyard/bin/dj <%= @app_name %> stop <%= @framework_env %>"
  if totalmem is greater than 120 MB for 2 cycles then restart # eating up memory?
  group dj_<%= @app_name %>